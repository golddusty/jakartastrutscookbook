<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
	<display-name>Struts Cookbook - Chapter 6 Examples</display-name>

  <!-- Action Servlet Configuration -->
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/mod1</param-name>
      <param-value>/WEB-INF/struts-config-mod1.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/mod2</param-name>
      <param-value>/WEB-INF/struts-config-mod2.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- Legacy Include Servlet Configuration -->
  <servlet>
    <servlet-name>LegacyIncludeServlet</servlet-name>
    <servlet-class>com.oreilly.strutsckbk.ch06.LegacyIncludeServlet</servlet-class>
  </servlet>

  <!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LegacyIncludeServlet</servlet-name>
    <url-pattern>/LegacyIncludeServlet</url-pattern>
  </servlet-mapping>

  <!-- The Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
